@model muscshop.Models.Genre
    
@{
    ViewBag.Title = "Browse";
}

<h3 id="albumtext" style="font-family:Audiowide; font-size:32px">@Model.Name Albums</h3>
<div class="row">
        <center>
        @foreach (var album in Model.Albums)
        {
            <div class="col-md-3 album-detail-div" style="margin-top:22px">
                <a id="albumtext" style="text-decoration:none" href="/Store/Detail/@album.AlbumId">
                    <img id="albumimg" style="border: 2px solid black; border-radius:10%" src="@album.AlbumUrl" alt="@album.Title" width="200" height="200" />
                    <br>
                    <span style="font-family: 'Arial Rounded MT'; font-size: 20px">@album.Title</span>
                </a>
            </div>
        }
        </center>
</div>





